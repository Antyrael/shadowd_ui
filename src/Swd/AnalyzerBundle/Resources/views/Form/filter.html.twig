<div id="filters" class="clearfix">
  <a id="filters-button" href="#"><img src="{{ asset('bundles/swdanalyzer/images/icons/cogs.svg') }}" title="Show/hide filters" /></a>
  <div id="filters-form" class="clearfix">
    {{ form_start(form) }}
      {{ form_errors(form) }}
      <div class="row">
        <div class="filters-form-search col-md-6">
          <h1>Search</h1>
          {% block search %}{% endblock %}
        </div>
        <div class="filters-form-ignore col-md-6">
          <h1>Ignore</h1>
          {% block ignore %}{% endblock %}
        </div>
      </div>
      <hr />
      <div class="filters-form-actions">
        {{ form_row(form.actions) }}
        <a class="btn btn-default" role="button" href="{{ path(app.request.attributes.get('_route')) }}?hash={{ random(1000) }}#filters">Clear</a>
      </div>
    {{ form_end(form) }}
  </div>
  <hr />
</div>
