{% extends 'SwdAnalyzerBundle::layout.html.twig' %}


{% block title %}Login{% endblock %}


{% block body %}
<div class="page-header">
  <h1>Login</h1>
</div>
{% if error %}
  <div class="alert alert-danger">{{ error.message }}</div>
{% endif %}
{% if demo %}
  <div class="alert alert-info" role="alert">
    <h4>Credentials:</h4>
    <table border="0">
      <tbody>
      <tr>
        <td><strong>Name:</strong> admin</td>
        <td style="padding-left: 10px"><strong>Pass:</strong> demo</td>
      </tr>
      <tr>
        <td><strong>Name:</strong> user</td>
        <td style="padding-left: 10px"><strong>Pass:</strong> demo</td>
      </tr>
      </tbody>
    </table>
  </div>
{% endif %}
<form action="{{ path('login_check') }}" method="post" class="form-signin" role="form">
  <div class="form-group"><label class="control-label required" for="user_username">Username</label><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" ></div>
  <div class="form-group"><label class="control-label required" for="user_password">Password</label><input type="password" id="password" name="_password" required="required" class="form-control" ></div>
  <div class="checkbox">
    <input type="checkbox" id="remember_me" name="_remember_me" checked />
    <label for="remember_me">Keep me logged in (1 day)</label>
  </div>
  <input type="hidden" name="_target_path" value="/" />
  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
  <button type="submit" class="btn btn-primary">Login</button>
</form>
{% endblock %}
