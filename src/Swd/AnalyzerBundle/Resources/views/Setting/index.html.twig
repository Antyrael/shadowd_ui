{% extends 'SwdAnalyzerBundle::layout.html.twig' %}


{% block title %}Settings{% endblock %}


{% block body %}
<div class="page-header">
  <h1>Settings</h1>
</div>
{{ form_start(form) }}
  <div class="col-md-6 whitelist-rule-information">
    <h2>Defaults</h2>
    {{ form_row(form.pageLimit) }}
    {{ form_row(form.sortOrder) }}
    {{ form_row(form.theme) }}
    {{ form_row(form.openFilter) }}
    {{ form_row(form.actions) }}
  </div>
  <div class="col-md-6 whitelist-rule-information">
    <h2>Password</h2>
    {{ form_row(form.oldPassword) }}
    {{ form_row(form.newPassword) }}
  </div>
{{ form_end(form) }}
{% endblock %}
